<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".memberProductedit"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="Product Name"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/edit_title_edtTxt"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editProduct_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/back_icon"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/edit_product_image_iv"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/add_image_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Click to Change Product Image"
            android:textColor="@color/black"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/edit_product_image_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <EditText
            android:id="@+id/edit_title_edtTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/inria_sans_regular"
            android:hint="Add Title"
            android:importantForAutofill="no"
            android:inputType="text"
            android:background="@drawable/edittext_style_white_smaller"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/edit_product_image_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="Product Description"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/edit_description_edtTxt"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/edit_description_edtTxt"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/inria_sans_regular"
            android:background="@drawable/edittext_style_white_smaller"
            android:gravity="start"
            android:hint="Add Description"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/edit_title_edtTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="Product Price"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/edit_price_edtTxt"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/edit_price_edtTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/inria_sans_regular"
            android:background="@drawable/edittext_style_white_smaller"
            android:hint="Add Price"
            android:importantForAutofill="no"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/edit_description_edtTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_product_btn"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_style_black"
            android:fontFamily="@font/poppins_semi_bold"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_price_edtTxt"
            tools:ignore="hardCodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
