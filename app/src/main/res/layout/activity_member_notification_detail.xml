<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    tools:context=".MemberNotificationDetail">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notification_details_back_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/back_icon"
        android:backgroundTint="@color/different_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="41dp"/>

    <TextView
        android:id="@+id/notification_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Notification Details"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/different_black"
        app:layout_constraintStart_toEndOf="@id/notification_details_back_button"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_description"
        android:text="Title"
        android:textColor="@color/different_black"
        android:textSize="16sp"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintTop_toBottomOf="@id/notification_details_back_button"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/notification_title_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edittext_style_white_smaller"
        android:fontFamily="@font/inria_sans_regular"
        android:hint="Name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/title_description"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_description"
        android:text="Description"
        android:textColor="@color/different_black"
        android:textSize="16sp"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintTop_toBottomOf="@id/notification_title_editText"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/notification_descripiton_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/inria_sans_regular"
        android:hint="Name"
        android:padding="12dp"
        android:background="@drawable/edittext_style_white_smaller"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="@tools:sample/lorem/random"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_description"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>