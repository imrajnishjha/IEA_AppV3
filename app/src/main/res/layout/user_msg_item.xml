        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:scaleY="1.7"
        android:layout_marginEnd="7.5dp"
        android:layout_gravity="end"
        android:src="@drawable/sidebar2"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userchatCV"
        app:cardCornerRadius="7dp"
        android:layout_marginEnd="20dp"
        android:outlineAmbientShadowColor="@color/different_black"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="end"
        android:backgroundTint="@color/different_black">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#f5f5f5"
            android:textSize="15sp"
            android:padding="12dp"
            android:maxWidth="290dp"
            android:justificationMode="inter_word"
            android:gravity="start"
            android:text="kya haal a=hai bhai gaf asdf asdf asdf asdf asfd sdf asdf asfd df"
            android:fontFamily="@font/poppins_regular"/>

