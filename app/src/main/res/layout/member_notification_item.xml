<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_margin="8dp"
    android:backgroundTint="#F5F5F5"
    android:elevation="6dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/member_notification_item_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/member_notification_item_date_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/member_notification_item_content_tv"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:gravity="top"
            android:textSize="12sp"
            tools:text="gsdfsad asdffsadfsadf asdfasdfasd asdfasdfasf safdsadfas asdfasdf sadfasddf adfsas fsdasfasndfasdfaskdf"
            android:orientation="horizontal"
            tools:maxLength="39"
            app:layout_constraintEnd_toStartOf="@id/member_notification_viewMore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/member_notification_item_title_tv"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/member_notification_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:text="01/01/2002"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/member_notification_item_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/member_notification_item_title_tv"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:id="@+id/member_notification_viewMore"
            android:textColor="@color/black"
            android:text="View more"
            android:gravity="start"
            android:fontFamily="@font/inter_semi_bold"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@id/member_notification_item_content_tv"
            app:layout_constraintBottom_toBottomOf="@id/member_notification_item_content_tv"
            app:layout_constraintEnd_toStartOf="@+id/member_notification_item_date_tv"
            app:layout_constraintStart_toEndOf="@id/member_notification_item_content_tv"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>